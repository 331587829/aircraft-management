/* 重构后的个人中心样式 */

/* 全局容器 */
.profile-container {
  background-color: #f7fafc;
  min-height: 100vh;
  padding-bottom: 30rpx;
}

/* 通用样式 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 30rpx 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1a365d;
}

.section-more {
  font-size: 26rpx;
  color: #718096;
}

.sub-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #4a5568;
  margin-bottom: 20rpx;
  padding: 0 30rpx;
}

/* A. 用户信息区 - 重新设计 */
.user-info-section {
  background: linear-gradient(135deg, #1a365d 0%, #2b6cb0 100%);
  padding: 40rpx 30rpx;
  border-radius: 0 0 30rpx 30rpx;
  color: #ffffff;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
  position: relative;
  overflow: hidden;
}

.user-info-section::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 100%;
  height: 100%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 1%, transparent 1%);
  background-size: 20rpx 20rpx;
  opacity: 0.3;
}

.user-card {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  position: relative;
  z-index: 2;
}

.user-basic-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 25rpx;
  position: relative;
  width: 100%;
}

.user-avatar-container {
  flex-shrink: 0;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.8);
  background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
  position: relative;
  overflow: hidden;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 编辑按钮样式 */
.edit-profile-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 24rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 12rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
  backdrop-filter: blur(5rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.edit-profile-btn:active {
  background-color: rgba(255, 255, 255, 0.3);
  transform: scale(0.98);
}

.edit-profile-btn .edit-text {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 500;
}

.user-avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
}

.avatar-text {
  font-size: 40rpx;
  font-weight: bold;
  color: #ffffff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.user-name-line {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex-wrap: wrap;
}

.user-nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  line-height: 1.2;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.auth-badge {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 40rpx;
  box-sizing: border-box;
  line-height: 1;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
  min-width: 80rpx;
  text-align: center;
  margin-left: 16rpx;
}

.auth-badge.authenticated {
  background-color: rgba(72, 187, 120, 0.95);
  color: #ffffff;
  border: 2rpx solid rgba(255, 255, 255, 0.4);
}

.auth-badge.pending {
  background-color: rgba(246, 173, 85, 0.95);
  color: #ffffff;
  border: 2rpx solid rgba(255, 255, 255, 0.4);
}

.badge-text {
  font-size: 24rpx;
  font-weight: 600;
}

.user-level {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
}

.aircraft-stats {
  display: flex;
  align-items: center;
  justify-content: space-around;
  background-color: rgba(255, 255, 255, 0.15);
  padding: 25rpx 20rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  width: 100%;
  box-sizing: border-box;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  flex: 1;
}

.stat-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
}

.stat-divider {
  width: 1rpx;
  height: 40rpx;
  background-color: rgba(255, 255, 255, 0.3);
}

.status-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.status-dot.active {
  background-color: #48bb78;
  box-shadow: 0 0 8rpx rgba(72, 187, 120, 0.6);
}

.status-text {
  font-size: 24rpx;
  opacity: 0.85;
}

/* B. 机主服务（现代化列表布局） */
.owner-services-section {
  background-color: #ffffff;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  border: 1rpx solid #f1f5f9;
}

.services-list {
  padding: 0 30rpx;
}

.service-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f1f5f9;
  transition: all 0.3s ease;
  position: relative;
}

.service-item:last-child {
  border-bottom: none;
}

.service-item:active {
  background-color: #f8fafc;
  transform: translateX(4rpx);
}

.service-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.service-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
  width: 48rpx;
  text-align: center;
}

.service-details {
  flex: 1;
}

.service-title {
  font-size: 28rpx;
  color: #1e293b;
  font-weight: 500;
  display: block;
  margin-bottom: 4rpx;
}

.service-subtitle {
  font-size: 24rpx;
  color: #64748b;
  display: block;
}

.service-right {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.service-badge {
  background: linear-gradient(135deg, #f56565 0%, #e53e3e 100%);
  color: #ffffff;
  font-size: 20rpx;
  min-width: 32rpx;
  height: 32rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(229, 62, 62, 0.3);
}

.service-arrow {
  font-size: 24rpx;
  color: #cbd5e1;
  font-weight: bold;
}

/* 联系客服按钮样式 */
.services-list button.service-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f1f5f9;
  transition: all 0.3s ease;
  position: relative;
  background: none;
  border: none;
  margin: 0;
  width: 100%;
  text-align: left;
  border-radius: 0;
  line-height: normal;
}

.services-list button.service-item::after {
  border: none;
}

.services-list button.service-item:active {
  background-color: #f8fafc;
  transform: translateX(4rpx);
}

/* C. 我的资产区 */
.assets-section {
  background-color: #ffffff;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.assets-list {
  padding: 0 30rpx 30rpx;
}

.asset-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #e2e8f0;
}

.asset-item:last-child {
  border-bottom: none;
}

.asset-info {
  display: flex;
  align-items: center;
}

.asset-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  width: 60rpx;
  text-align: center;
}

.asset-details {
  flex: 1;
}

.asset-title {
  font-size: 28rpx;
  color: #4a5568;
  display: block;
  margin-bottom: 5rpx;
}

.asset-count {
  font-size: 24rpx;
  color: #718096;
}

.arrow {
  font-size: 24rpx;
  color: #a0aec0;
}

/* F. 厂家管理区 */
.admin-section {
  background-color: #ffffff;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  border: 2rpx solid #e53e3e;
}

.admin-list {
  padding: 0 30rpx 30rpx;
}

.admin-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #e2e8f0;
}

.admin-item:last-child {
  border-bottom: none;
}

.admin-info {
  display: flex;
  align-items: center;
}

.admin-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  color: #e53e3e;
}

.admin-title {
  font-size: 28rpx;
  color: #e53e3e;
  font-weight: 500;
}
