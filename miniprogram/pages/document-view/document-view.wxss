.page{background:#fff;min-height:100vh}
.hero{width:100%;height:420rpx;background:#f5f5f7}
.hero.placeholder{background:#f5f5f7}
.loading,.error{padding:60rpx 32rpx;text-align:center;color:#666}
.spinner{width:60rpx;height:60rpx;border:6rpx solid #e6e6e6;border-top-color:#0071e3;border-radius:50%;animation:spin 1s linear infinite;margin:0 auto}
@keyframes spin{0%{transform:rotate(0)}100%{transform:rotate(360deg)}}
.wrap{padding:32rpx}
.title{font-size:40rpx;font-weight:600;color:#111;line-height:1.4;margin-top:8rpx}
.meta{display:flex;align-items:center;gap:12rpx;margin-top:12rpx;color:#888;font-size:26rpx}
.dot{color:#ccc}
.content{margin-top:24rpx;font-size:30rpx;color:#333;line-height:1.75}
.gallery{display:grid;grid-template-columns:repeat(3,1fr);grid-gap:12rpx;margin-top:24rpx}
.img{width:100%;height:220rpx;border-radius:16rpx;background:#f5f5f7}
.files{display:flex;flex-direction:column;gap:16rpx;margin-top:24rpx}
.file{height:72rpx;background:#f5f5f7;color:#111;border:none;border-radius:12rpx}