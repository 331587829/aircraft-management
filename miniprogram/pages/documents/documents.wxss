/* ====== 全局安全留白 ====== */
.page {
  background: #fff;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 0 32rpx;          /* 统一左右 32rpx 呼吸留白 */
  box-sizing: border-box;
}

/* 顶部栏 */
.top-bar {
  background: #fff;
  padding: 32rpx 0 24rpx;   /* 去掉左右内补，由 page 统一控制 */
  display: flex;
  align-items: flex-start;  /* 改为顶部对齐 */
  border-bottom: 1rpx solid #f2f2f2;
}
.top-bar .title {
  font-size: 40rpx;
  font-weight: 600;
  color: #111;
  letter-spacing: .4rpx;
  flex-shrink: 0;
  margin-right: 40rpx;      /* 标题和搜索框之间的间距 */
}
/* 搜索框 */
.search-box {
  position: relative;
  flex: 1;                   /* 占据剩余空间 */
  max-width: 400rpx;         /* 设置最大宽度 */
}
.search-box input {
  width: 100%;
  height: 64rpx;
  background: #f5f5f7;
  border-radius: 32rpx;
  padding: 0 56rpx 0 24rpx;
  font-size: 26rpx;
  color: #111;
}
.search-box .clear {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #888;
  font-size: 28rpx;
}

/* 横向分类导航 */
.nav-scroll {
  height: 96rpx;
  background: #fff;
  padding: 0 0 8rpx;        /* 顶部不留白，底部 8rpx 呼吸 */
  /* 移除负边距，避免超出边界 */
  border-bottom: 1rpx solid #f2f2f2;
}
.nav-list {
  display: flex;
  align-items: center;
  height: 100%;
  gap: 40rpx;
  padding: 0 32rpx;         /* 内容再留 32rpx，避免文字贴边 */
  box-sizing: border-box;   /* 确保padding包含在宽度内 */
}
.nav-item {
  flex-shrink: 0;
  font-size: 30rpx;
  color: #888;
  position: relative;
  padding: 8rpx 0;
  transition: color .2s;
}
.nav-item.active {
  color: #0071e3;
}
.nav-item.active::after {
  content: '';
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 4rpx;
  background: #0071e3;
  border-radius: 2rpx;
}

/* 骨架屏 */
.skeleton {
  padding: 40rpx 0;         /* 左右留白由 page 控制，这里只留上下 */
}
.sk-card {
  display: flex;
  gap: 40rpx;
  margin-bottom: 48rpx;
}
.sk-cover {
  width: 320rpx;
  height: 200rpx;
  background: #f5f5f7;
  border-radius: 16rpx;
}
.sk-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 20rpx;
}
.sk-line {
  height: 28rpx;
  background: #f5f5f7;
  border-radius: 8rpx;
}
.sk-title {
  width: 60%;
}
.sk-desc {
  width: 80%;
}

/* 列表 */
.list {
  flex: 1;
  padding: 40rpx 0 120rpx;  /* 底部 120rpx 安全距离，避开 Home 指示条 */
}
.card {
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, .06);
}
.cover {
  width: 100%;
  height: 400rpx;
  display: block;
  background: #f5f5f7;
}
.cover.placeholder {
  background: #f5f5f7;          /* 纯浅灰，无图标 */
}
.info {
  padding: 40rpx;
}
.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #111;
  line-height: 1.4;
  margin-bottom: 16rpx;
}
.desc {
  font-size: 28rpx;
  color: #555;
  line-height: 1.5;
  margin-bottom: 24rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.meta {
  font-size: 24rpx;
  color: #888;
}

/* 底部提示 */
.loading-more,
.no-more,
.empty {
  text-align: center;
  padding: 40rpx 0;
  font-size: 26rpx;
  color: #888;
}