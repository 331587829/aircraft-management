.container {
  padding: 0;
  margin: 0;
  background-color: #f7fafc;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* Â§¥ÈÉ®Ê†∑Âºè */
.header {
  background: linear-gradient(135deg, #1a365d 0%, #2b6cb0 100%);
  padding: 10rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.header-title {
  flex: 1;
}

.title-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
}

.header-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
}

/* ËΩÆÊí≠ÂõæÊ†∑Âºè */
.banner-section {
  margin: 0;
  padding: 0;
  background-color: #ffffff;
  border-radius: 0rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.banner-section swiper {
  width: 100%;
  height: 420rpx;
  border-radius: 0rpx;
  overflow: hidden;
}

.banner-section swiper-item {
  border-radius: 0rpx;
  overflow: hidden;
}

.banner-item {
  position: relative;
  width: 100%;
  height: 420rpx;
  overflow: hidden;
  border-radius: 0rpx;
}

.banner-item image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 0rpx;
  display: block;
}

/* Âú®Á∫øÂÆ¢ÊúçÂÖ•Âè£Ê†∑Âºè */
.customer-service-section {
  margin: 20rpx;
  background: linear-gradient(135deg, #1a365d 0%, #2b6cb0 100%);
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}

.customer-service-section::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0) 70%);
  animation: float 15s infinite linear;
}

@keyframes float {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.service-header {
  margin-bottom: 24rpx;
}

.service-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  display: block;
  margin-bottom: 8rpx;
}

.service-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
}

.service-button {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
  border-radius: 16rpx;
  padding: 24rpx 30rpx;
  display: flex;
  align-items: center;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
  margin: 0;
  width: 100%;
  box-sizing: border-box;
}

.service-button:active {
  background: rgba(255, 255, 255, 0.25);
  transform: translateY(2rpx);
}

.service-icon {
  width: 64rpx;
  height: 64rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.service-icon image {
  width: 40rpx;
  height: 40rpx;
  filter: brightness(0) invert(1);
}

.service-text {
  flex: 1;
  min-width: 0;
}

.service-btn-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 6rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.service-btn-desc {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.service-arrow {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 8rpx;
  flex-shrink: 0;
}

.service-arrow image {
  width: 24rpx;
  height: 24rpx;
  filter: brightness(0) invert(1);
}

/* Âä®ÊÄÅ‰ø°ÊÅØÂå∫ÂüüÊ†∑Âºè */
.dynamic-info-section {
  margin: 20rpx 0;
  padding: 0 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1a365d;
  position: relative;
}

.section-title::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 0;
  width: 60rpx;
  height: 4rpx;
  background: linear-gradient(135deg, #1a365d, #2b6cb0);
  border-radius: 2rpx;
}

.section-more {
  font-size: 26rpx;
  color: #2b6cb0;
  font-weight: 500;
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  background: rgba(43, 108, 176, 0.1);
  transition: all 0.3s ease;
}

.section-more:active {
  background: rgba(43, 108, 176, 0.2);
  transform: scale(0.95);
}

.dynamic-list {
  display: flex;
  flex-direction: column;
  gap: 0;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

.dynamic-item {
  background: transparent;
  padding: 32rpx;
  display: flex;
  align-items: flex-start;
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  border-bottom: 1rpx solid #f7fafc;
  position: relative;
}

.dynamic-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
  transition: left 0.6s ease;
}

.dynamic-item:active::before {
  left: 100%;
}

.dynamic-item:last-child {
  border-bottom: none;
}

.dynamic-item:active {
  background: rgba(43, 108, 176, 0.05);
  transform: translateY(0);
}

.dynamic-tag {
  padding: 10rpx 14rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 700;
  color: #ffffff;
  margin-right: 28rpx;
  min-width: 80rpx;
  max-width: 80rpx;
  text-align: center;
  line-height: 1.3;
  letter-spacing: 1rpx;
  text-indent: -2rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  position: relative;
  z-index: 2;
  transition: all 0.3s ease;
  align-self: flex-start;
  flex-shrink: 0;
  margin-top: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.dynamic-tag:active {
  transform: scale(0.95);
}

.dynamic-tag.notice {
  background: linear-gradient(135deg, #4A90E2, #357ABD);
  border-left: 8rpx solid #4A90E2;
}

.dynamic-tag.letter {
  background: linear-gradient(135deg, #50C878, #3DAF6B);
  border-left: 8rpx solid #50C878;
}

.dynamic-tag.tech {
  background: linear-gradient(135deg, #FF6B6B, #E05252);
  border-left: 8rpx solid #FF6B6B;
}

.dynamic-tag.news {
  background: linear-gradient(135deg, #FFA500, #FF8C00);
  border-left: 8rpx solid #FFA500;
}

.dynamic-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  position: relative;
  z-index: 2;
}

.dynamic-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #1a365d;
  margin-bottom: 12rpx;
  line-height: 1.5;
  transition: color 0.3s ease;
}

.dynamic-item:active .dynamic-title {
  color: #2b6cb0;
}

.dynamic-time {
  font-size: 26rpx;
  color: #718096;
  line-height: 1.3;
  font-weight: 500;
  display: flex;
  align-items: center;
}

.dynamic-time::before {
  content: 'üìÖ';
  margin-right: 8rpx;
  font-size: 22rpx;
}

