/* 信息管理页面样式 */
.info-management-container {
  padding: 30rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  margin-bottom: 40rpx;
  text-align: center;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.page-subtitle {
  font-size: 28rpx;
  color: #666;
  display: block;
}

/* 区域标题样式 */
.section-title {
  margin-bottom: 30rpx;
  padding-left: 10rpx;
  border-left: 6rpx solid #4A90E2;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.title-desc {
  font-size: 26rpx;
  color: #666;
  display: block;
}

/* 文档类型统计区 */
.stats-section {
  margin-bottom: 40rpx;
}

.stats-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.stats-item {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.stats-item:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 5rpx rgba(0, 0, 0, 0.1);
}

.stats-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-right: 30rpx;
}

.stats-info {
  flex: 1;
}

.stats-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.stats-count {
  font-size: 26rpx;
  color: #666;
  display: block;
}

.stats-arrow {
  font-size: 40rpx;
  color: #ccc;
}

/* 快速发布区 */
.quick-publish-section {
  margin-bottom: 40rpx;
}

.publish-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 20rpx;
}

.publish-item {
  background: linear-gradient(135deg, #4A90E2, #357ABD);
  padding: 50rpx 40rpx;
  border-radius: 20rpx;
  box-shadow: 0 6rpx 30rpx rgba(74, 144, 226, 0.4);
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  transition: all 0.3s ease;
  color: #fff;
  position: relative;
  overflow: hidden;
}

.publish-item:active {
  transform: scale(0.98);
  box-shadow: 0 3rpx 15rpx rgba(74, 144, 226, 0.5);
}

.publish-item::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(45deg, transparent, rgba(255,255,255,0.1), transparent);
  transform: rotate(45deg);
  transition: all 0.6s ease;
}

.publish-item:active::before {
  left: 100%;
}

.publish-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
  position: relative;
  z-index: 2;
}

.publish-desc {
  font-size: 28rpx;
  opacity: 0.95;
  line-height: 1.5;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
  position: relative;
  z-index: 2;
}

/* 刷新区域 */
.refresh-section {
  margin-top: 40rpx;
  display: flex;
  justify-content: center;
}

.refresh-btn {
  background-color: #fff;
  color: #4A90E2;
  border: 1rpx solid #4A90E2;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.refresh-icon {
  margin-right: 10rpx;
  font-size: 28rpx;
}