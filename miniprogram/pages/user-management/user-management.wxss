/* 页面容器 */
.container {
  height: 100vh;
  background-color: #f7f8fa;
  display: flex;
  flex-direction: column;
  padding: 0; /* 重置默认padding */
}

/* 搜索和筛选栏 */
.search-filter-bar {
  background-color: #ffffff;
  padding: 20rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 10;
}

.search-box {
  display: flex;
  align-items: center;
  background-color: #f5f7fa;
  border-radius: 36rpx;
  padding: 16rpx 24rpx;
  margin-bottom: 20rpx;
}

.search-icon {
  font-size: 32rpx;
  color: #999;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.clear-icon {
  font-size: 32rpx;
  color: #ccc;
  padding: 10rpx;
}

.filter-tabs {
  display: flex;
  justify-content: space-around;
  border-bottom: 1rpx solid #eee;
}

.filter-tab {
  font-size: 28rpx;
  color: #666;
  padding: 16rpx 0;
  position: relative;
  transition: all 0.3s;
}

.filter-tab.active {
  color: #2b6cb0;
  font-weight: 600;
}

.filter-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #2b6cb0;
  border-radius: 2rpx;
}

/* 用户列表 */
.user-list {
  flex: 1;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  height: 0; /* 配合flex:1使用 */
}

.user-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
}

.user-info-main {
  display: flex;
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #eee;
  margin-right: 24rpx;
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.user-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.user-nickname {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-right: 16rpx;
}

.role-tag {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.role-tag.admin {
  background-color: #ebf8ff;
  color: #2b6cb0;
}

.role-tag.user {
  background-color: #f0fff4;
  color: #38a169;
}

.user-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

.meta-item {
  font-size: 24rpx;
  color: #666;
}

.user-time {
  font-size: 22rpx;
  color: #999;
}

/* 操作栏 */
.action-bar {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
  display: flex;
  justify-content: flex-end;
}

.action-btn {
  margin: 0;
  font-size: 24rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  background-color: #f7f8fa;
  color: #666;
  line-height: 1.5;
}

.action-btn.promote {
  background-color: #ebf8ff;
  color: #2b6cb0;
}

.action-btn.demote {
  background-color: #fff5f5;
  color: #e53e3e;
}

.btn-hover {
  opacity: 0.8;
}

/* 状态提示 */
.loading-state, .no-more-state {
  text-align: center;
  padding: 20rpx 0;
  color: #999;
  font-size: 24rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 150rpx;
  color: #999;
  font-size: 28rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}