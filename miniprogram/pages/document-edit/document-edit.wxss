/* pages/document-edit/document-edit.wxss */

/* iPhone风格容器 - 简洁白色背景 */
.modern-container {
  width: 100vw;
  min-height: 100vh;
  background: #ffffff;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  position: relative;
}

/* 主要内容区域 - 优化布局 */
.modern-main-content {
  flex: 1;
  width: 100%;
  padding: 24rpx;
  box-sizing: border-box;
  overflow-y: auto;
  background: #ffffff;
  display: flex;
  flex-direction: column;
  height: calc(100vh - 200rpx);
}

/* 输入区块样式 - iOS风格 */
.modern-input-section {
  margin-bottom: 32rpx;
  background: #ffffff;
  border-radius: 8rpx;
  padding: 24rpx;
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.modern-input-section:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
}

.modern-section-label {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
  margin-bottom: 24rpx;
  display: block;
  letter-spacing: -0.5rpx;
  text-align: left;
}

/* 输入框包装器 */
.input-wrapper, .textarea-wrapper {
  position: relative;
  width: 100%;
}

/* 标题输入框 - iOS风格 */
.modern-title-input {
  width: 100%;
  height: 96rpx;
  background: #ffffff;
  border: 2rpx solid #e2e8f0;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  color: #1a202c;
  box-sizing: border-box;
  transition: all 0.3s ease;
  font-weight: 500;
}

.modern-title-input:focus {
  border-color: #4299e1;
  background: #ffffff;
  box-shadow: 0 0 0 3rpx rgba(66, 153, 225, 0.1);
}

.modern-title-input:focus {
  border-color: #4299e1;
  background: #ffffff;
  box-shadow: 0 0 0 3rpx rgba(66, 153, 225, 0.1);
}

/* 分类选择器 - iOS风格 */
.modern-category-selector {
  width: 100%;
  height: 96rpx;
  background: #ffffff;
  border: 2rpx solid #e2e8f0;
  border-radius: 8rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  transition: all 0.3s ease;
  font-weight: 500;
}

.modern-category-selector:active {
  border-color: #4299e1;
  background: #f7fafc;
  box-shadow: 0 0 0 3rpx rgba(66, 153, 225, 0.1);
}

.modern-category-selector:active {
  background: #edf2f7;
  border-color: #cbd5e0;
}

.modern-category-text {
  font-size: 32rpx;
  color: #2d3748;
}

.modern-category-text:empty::before {
  content: '请选择分类';
  color: #a0aec0;
}

.modern-arrow {
  font-size: 36rpx;
  color: #718096;
  transform: rotate(90deg);
  transition: transform 0.3s ease;
}

.modern-category-selector:active .modern-arrow {
  transform: rotate(90deg) translateX(4rpx);
}

/* 权限选择器 - iOS风格 */
.modern-permission-selector {
  display: flex;
  gap: 24rpx;
  width: 100%;
}

.modern-permission-option {
  flex: 1;
  height: 96rpx;
  background: #ffffff;
  border: 2rpx solid #e2e8f0;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  transition: all 0.3s ease;
  font-weight: 500;
}

.modern-permission-option:active {
  border-color: #4299e1;
  background: #f7fafc;
  box-shadow: 0 0 0 3rpx rgba(66, 153, 225, 0.1);
}

.modern-permission-option.active {
  background: #4299e1;
  border-color: #4299e1;
  color: #ffffff;
}

.modern-permission-option:active {
  transform: scale(0.98);
}

.permission-icon {
  font-size: 36rpx;
}

.permission-text {
  font-size: 28rpx;
  font-weight: 500;
}

/* 内容文本区域 */
.modern-content-section {
  min-height: 400rpx;
}

.modern-content-textarea {
  width: 100%;
  min-height: 320rpx;
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 32rpx;
  color: #2d3748;
  box-sizing: border-box;
  line-height: 1.6;
  transition: all 0.3s ease;
}

.modern-content-textarea:focus {
  border-color: #4299e1;
  background: #ffffff;
  box-shadow: 0 0 0 3rpx rgba(66, 153, 225, 0.1);
}

/* 字符计数 */
.modern-character-count {
  position: absolute;
  right: 24rpx;
  bottom: 24rpx;
  font-size: 24rpx;
  color: #a0aec0;
  background: rgba(255, 255, 255, 0.9);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

/* 附件工具栏样式 - 放在内容标题下面，内容编辑框外面 */
.modern-attachment-toolbar {
  margin-top: 16rpx;
  margin-bottom: 16rpx;
  display: flex;
  justify-content: space-between;
  margin-left: 0;
  padding-left: 0;
  width: 100%;
}
 
 .modern-btn-attachment {
  background: transparent;
  border: 2rpx solid #e2e8f0;
  border-radius: 8rpx;
  width: 48rpx;
  height: 48rpx;
  color: #718096;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  box-shadow: none;
  transition: all 0.3s ease;
  padding-left: 12rpx;
}
 
 .modern-btn-attachment:active {
   background: #f7fafc;
   border-color: #4299e1;
   color: #4299e1;
 }
 
.attachment-icon {
  font-size: 24rpx;
}

.mode-tabs{display:flex;gap:24rpx;align-items:center}
.tab{font-size:28rpx;color:#718096}
.tab.active{color:#111;font-weight:600;position:relative}
.tab.active::after{content:'';position:absolute;left:0;bottom:-6rpx;width:100%;height:4rpx;background:#4299e1;border-radius:2rpx}

.modern-preview{min-height:320rpx;background:#f8fafc;border:2rpx solid #e2e8f0;border-radius:8rpx;padding:24rpx}
.modern-editor{min-height:600rpx;height:calc(100vh - 500rpx);background:#f8fafc;border:2rpx solid #e2e8f0;border-radius:8rpx;padding:24rpx;overflow-y:auto}

/* 附件预览 */
.modern-attachment-preview {
  margin-top: 32rpx;
}

.modern-attachment-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.modern-attachment-item {
  background: #f8fafc;
  border-radius: 12rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1rpx solid #e2e8f0;
  transition: all 0.3s ease;
}

.modern-attachment-item:active {
  background: #edf2f7;
}

.modern-attachment-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
}

.attachment-type-icon {
  font-size: 40rpx;
}

.attachment-details {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.modern-attachment-name {
  font-size: 28rpx;
  color: #2d3748;
  font-weight: 500;
}

.modern-attachment-size {
  font-size: 24rpx;
  color: #718096;
}

.modern-btn-remove {
  background: #fed7d7;
  border: none;
  border-radius: 50%;
  width: 60rpx;
  height: 60rpx;
  color: #e53e3e;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.modern-btn-remove:active {
  background: #feb2b2;
  transform: scale(0.9);
}

/* 页脚区域 */
.modern-footer {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  padding: 32rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.modern-btn-publish {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
  border: none;
  border-radius: 8rpx;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(72, 187, 120, 0.2);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modern-btn-publish.disabled {
  background: #cbd5e0;
  box-shadow: none;
  opacity: 0.6;
}

.modern-btn-publish:not(.disabled):active {
  transform: translateY(1rpx);
  box-shadow: 0 1rpx 4rpx rgba(72, 187, 120, 0.3);
}

.modern-btn-publish:not(.disabled)::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: width 0.3s, height 0.3s;
}

.modern-btn-publish:not(.disabled):active::after {
  width: 200rpx;
  height: 200rpx;
}

/* 弹窗样式 */
.modern-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 1000;
  display: none;
  align-items: center;
  justify-content: center;
}

.modern-modal.show {
  display: flex;
}

.modern-modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  /* backdrop-filter: blur(4rpx); */
}

.modern-modal-content {
  width: 80%;
  max-width: 600rpx;
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
  overflow: hidden;
  animation: modalSlideIn 0.3s ease;
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: translateY(100rpx) scale(0.9);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.modern-modal-header {
  padding: 40rpx 32rpx 24rpx;
  border-bottom: 1rpx solid #e2e8f0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.modern-modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #2d3748;
}

.modern-btn-close {
  background: none;
  border: none;
  font-size: 40rpx;
  color: #718096;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.modern-btn-close:active {
  background: #f7fafc;
}

.modern-modal-body {
  max-height: 600rpx;
}

.modern-category-list {
  max-height: 600rpx;
}

.modern-category-item {
  padding: 32rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  border-bottom: 1rpx solid #f7fafc;
  transition: all 0.3s ease;
}

.modern-category-item:active {
  background: #f7fafc;
}

.modern-category-item.active {
  background: #4299e1;
  color: #ffffff;
}

.modern-category-icon {
  font-size: 36rpx;
}

.modern-category-name {
  font-size: 28rpx;
  font-weight: 500;
}

.modern-modal-footer {
  padding: 24rpx 32rpx 40rpx;
  display: flex;
  justify-content: center;
}

.modern-btn-confirm {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
  border-radius: 12rpx;
  padding: 24rpx 48rpx;
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.modern-btn-confirm:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.4);
}

/* 响应式优化 */
@media (max-width: 750rpx) {
  .modern-main-content {
    padding: 32rpx 24rpx;
    margin-top: 0;
    border-radius: 0;
  }
  
  .modern-input-section {
    padding: 24rpx;
    margin-bottom: 32rpx;
  }
  
  .modern-footer {
    padding: 24rpx;
  }
}

@media (max-width: 375px) {
  .modern-main-content {
    padding: 24rpx 16rpx;
  }
  
  .modern-input-section {
    padding: 20rpx;
    margin-bottom: 24rpx;
  }
  
  .modern-section-label {
    font-size: 28rpx;
  }
  
  .modern-title-input, .modern-category-selector, .modern-permission-option {
    height: 80rpx;
    font-size: 28rpx;
  }
}